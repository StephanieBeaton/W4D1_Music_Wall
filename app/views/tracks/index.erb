
<% if @message %>
  <p><%= @message %></p>
<% end %>

<% @tracks.each do |track| %>
  <div class="track">
    <br><br>
    <p> ------------------------------------- </p>
    <p> Vote count <%= track.votes.count %> </p>
    <h3><%= track.song_title %> <small>(by: <%=track.author %>) track.id <%=track.id %></small> </h3>
    <p>
      <a href="http://<%= track.url %>"> <%= track.url %></a>
    </p>

    <form method="POST" action="/votes">
      <input type="hidden" name="track_id" value="<%= track.id %>" />
      <input type="hidden" name="user_id" value="<%= session[:user_id]%>" />
      <input type="submit" value="Vote Up" />
    </form>

  </div>

<% end %>
<a href="tracks/new">Post a track...It's FREEE (for now)!</a>


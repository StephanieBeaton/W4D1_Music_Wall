
<% if @message %>
  @message is not null
  <p><%= @message %></p>
<% end %>

<% @tracks.each do |track| %>
  <div class="track">
    <span> <%= track.votes.count %> </span>
    <h3><%= track.song_title %> <small>(by: <%=track.author %>)</small> </h3>
    <p>
      <%= track.url %>
    </p>

    <form method="POST" action="/votes">
      <input type="hidden" name="track_id" value="<%= track.id %>" />
      <input type="hidden" name="user_id" value="1" />
      <input type="submit" value="Vote Up" />
    </form>

  </div>

<% end %>
<a href="tracks/new">Post a track...It's FREEE (for now)!</a>

